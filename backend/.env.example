# Talk2PDF Backend Environment Variables
# Copy this file to .env and fill in your actual values

# ================================
# CORE CONFIGURATION
# ================================

# Gemini AI Configuration
GEMINI_API_KEY=your_gemini_api_key_here

# Environment Configuration
ENVIRONMENT=development

# Frontend Configuration
FRONTEND_URL=http://localhost:5173

# ================================
# SERVER CONFIGURATION
# ================================

# Server Settings
HOST=0.0.0.0
PORT=8000

# Debug and Documentation
DEBUG=true
DOCS_ENABLED=true

# ================================
# CORS CONFIGURATION
# ================================

# Custom CORS Origins (comma-separated, optional)
# ALLOWED_ORIGINS=https://custom-domain.com,https://www.custom-domain.com

# ================================
# FILE UPLOAD CONFIGURATION
# ================================

# Maximum file size in bytes (50MB default)
MAX_FILE_SIZE=52428800

# ================================
# LOGGING CONFIGURATION
# ================================

# Logging Level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# ================================
# PRODUCTION SETTINGS
# ================================

# For production deployment:
# ENVIRONMENT=production
# FRONTEND_URL=https://your-netlify-url.netlify.app
# DEBUG=false
# DOCS_ENABLED=false
# LOG_LEVEL=INFO

# ================================
# MANUAL DEPLOYMENT SETTINGS
# ================================

# SSL Configuration (for manual deployments)
# SSL_ENABLED=false
# SSL_CERT_PATH=/path/to/ssl/cert.pem
# SSL_KEY_PATH=/path/to/ssl/key.pem

# Rate Limiting (for public deployments)
# RATE_LIMIT_ENABLED=false
# RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Health Check Configuration
# HEALTH_CHECK_ENABLED=true
# HEALTH_CHECK_PATH=/health
