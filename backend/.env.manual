# Talk2PDF Backend - Manual Host Configuration
# Use this for custom deployments or manual server setup

# Environment Configuration
ENVIRONMENT=production

# Gemini AI Configuration
GEMINI_API_KEY=your_actual_gemini_api_key_here

# Frontend Configuration
FRONTEND_URL=https://your-custom-domain.com

# Server Configuration
HOST=0.0.0.0
PORT=8080

# Custom CORS Origins (add your specific domains)
ALLOWED_ORIGINS=https://your-custom-domain.com,https://www.your-custom-domain.com,https://subdomain.your-domain.com

# Security Settings
DEBUG=false
DOCS_ENABLED=false

# File Upload Limits (50MB)
MAX_FILE_SIZE=52428800

# Database/Storage (if using custom storage)
STORAGE_PATH=./storage

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# SSL Configuration (if using HTTPS)
SSL_ENABLED=true
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/key.pem

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/health
